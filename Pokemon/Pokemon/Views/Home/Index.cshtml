@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row row-cols-6 g-4">
        @foreach (var item in Model.PokemonData)
        {
            <div class="col">
                <div class="border">
                    <div class="d-flex justify-content-center">
                        <img src="@item.Sprite.FrontDefault" class="img-fluid" />

                    </div>
                    <div class="d-flex justify-content-center">
                        @item.Name
                    </div>
                    <div class="d-flex justify-content-center">
                        <p class="p-1">
                             @((double)item.Height/10)m <img src="https://static.thenounproject.com/png/1220594-200.png" height="20" width="20">
                        </p>
                        <p class="p-1">
                             <img src="https://as2.ftcdn.net/v2/jpg/01/87/98/47/1000_F_187984779_faEWl2p20pzLohx7UJffRPsYWzYjyg9T.jpg" height="20" width="20"> @((double)item.Weight/10)kg
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@await Html.PartialAsync("Common/Pager", new Pager{ PageSize = Model.PageSize , Count = Model.Count, Action="Index", Controller="Home"})