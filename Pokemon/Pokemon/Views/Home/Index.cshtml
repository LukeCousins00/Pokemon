@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Howling Abyss</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <div class="form-group mb-3">
        <input type="text" class="form-control" name="pokemon1" placeholder="Pokemon 1">
    </div>
    <div class="form-group mb-3">
        <input type="text" class="form-control" name="pokemon2" placeholder="Pokemon 2">
    </div>
    <button type="submit" class="btn btn-primary">Can They Breed</button>
</form>

@if (Model != null)
{
    @foreach (EggGroupViewModel item in Model.EggGroups)
    {
        <h2>@item.PokemonName</h2>
        <ul class="list-group mb-2">
            @foreach (string eggGroup in item.EggGroups)
            {
                <li class="list-group-item">@eggGroup</li>
            }
        </ul>
    }

    if (@Model.CanBreed)
    {
        <div class="alert alert-success" role="alert">
            THEY CAN BREED!
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            NO BREEDING :'(
        </div>
    }
}

